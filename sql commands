sql commands

CREATE TABLE `orderdata` (
	`orderid` INT NOT NULL AUTO_INCREMENT,
	`user_id` INT,
	`restaurant_id` INT,
	`food_id` INT,
	`percent` INT,
	KEY `restaurant` (`restaurant_id`) USING BTREE,
	PRIMARY KEY (`orderid`)
);

update userdata set water=0,calories=0,land=0 WHERE userid=1;

CREATE TABLE `restaurant` (
	`res_id` INT NOT NULL AUTO_INCREMENT,
	`res_name` TEXT CHARACTER SET utf8 COLLATE utf8_general_ci,
	`res_password` TEXT CHARACTER SET utf8 COLLATE utf8_general_ci,
	`water` INT,
	`calories` INT,
	`land` INT,
	PRIMARY KEY (`res_id`)
);